{
    "name": "vodafone/conf_saturn",
    "description": "Configurador de Ofertas/Descuentos",
    "type": "project",
    "keywords": ["vodafone", "mars", "api", "microframework", "rest", "router", "psr7"],
    "license": "MIT",
    "authors": [{
        "name": "Diego FeliÃº",
        "email": "diego.feliud@gmail.com"
    }],
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.9",
        "slim/php-view": "^2.0",
        "slim/http": "^0.5",
        "monolog/monolog": "^1.17",
        "vlucas/phpdotenv": "^3.0",
        "firebase/php-jwt": "^5.0",
        "tuupola/cors-middleware": "^0.9.1",
        "tuupola/slim-jwt-auth": "^2.3",
        "illuminate/database": "^5.5",
        "illuminate/filesystem": "^5.7",
        "illuminate/translation": "^5.3",
        "illuminate/console": "^5.7",
        "respect/validation": "^1.1",
        "robmorgan/phinx": "dev-master#4c26aeb"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "seld/jsonlint": "^1.7",
        "fzaninotto/faker": "^1.7",
        "mazecode/dumpper": "^1.0"

    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": ["database/"],
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0,
        "php": "5.6"
    },
    "provide": {
        "psr/log-implementation": "1.0.0"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-install-cmd": [
            "composer dumpautoload -o"
        ],
        "post-update-cmd": [
            "composer dumpautoload -o"
        ],
        "start": "php -S 0.0.0.0:8888 -t public public/index.php",
        "test": "phpunit --colors=always --coverage-clover",
        "refresh-database": "phinx rollback -t0 && phinx migrate && phinx seed:run"
    }
}